@model ProjectManager.Models.Project

<form asp-action="OnPostDelete" asp-controller="Project">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Radera bok</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="ProjectName"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="ProjectName" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-3 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-50" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-50">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>