@model IEnumerable<ProjectManager.Models.Project>
@using Microsoft.AspNetCore.Http;


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Projects</h2>
        </div>
        <div class="col-6 text-right">
            @if (Context.Session.GetInt32("AdminId") != null)

            {
                <a asp-controller="Project" asp-action="Create" class="btn btn-primary">Add a project</a>
            }
            
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Project Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Project project in Model)
                {
                    <tr>
                        <td width="35%">@project.ProjectName</td>

                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                @if (Context.Session.GetInt32("AdminId") != null)

                                {
                                    <a asp-controller="Project" asp-action="Update" asp-route-Id="@project.Id" class="btn btn-primary mx-1">Update</a>
                                    <a asp-controller="Project" asp-action="Delete" asp-route-Id="@project.Id" class="btn btn-danger mx-1">Delete</a>
                                }

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No projects added yet</p>
    }
</div>