@model ProjectManager.Models.TheManager

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add a programmer and the project</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="ProgrammerId"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="ProjectId"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <select asp-for="ProgrammerId" asp-items="ViewBag.ProgrammerId" class="form-control"></select>                                           
                    </div>
                    <div class="col-3">
                        <select asp-for="ProjectId" asp-items="ViewBag.ProjectId" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-5 offset-1 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-50" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-50">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>