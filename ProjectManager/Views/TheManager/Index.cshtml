@model IEnumerable<ProjectManager.Models.TheManager>
@using Microsoft.AspNetCore.Http;


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Programmers and projects</h2>
        </div>
        @if (Context.Session.GetInt32("AdminId") != null)

        {
            <div class="col-6 text-right">
                <a asp-controller="TheManager" asp-action="Create" class="btn btn-primary">Add</a>
            </div>
        }
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Project Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (TheManager manager in Model)
                {
                    <tr>
                        <td width="35%">@Html.DisplayFor(modelItem => manager.Programmer.FirstName)</td>
                        <td width="35%">@Html.DisplayFor(modelItem => manager.Programmer.LastName)</td>
                        <td width="35%">@Html.DisplayFor(modelItem => manager.Project.ProjectName)</td>
                        <td width="30%">

                            <div class="w-100 btn-group" role="group">
                                @if (Context.Session.GetInt32("AdminId") != null)
                                {
                                    <form asp-action="GoToUpdate" asp-controller="TheManager">
                                        <button type="submit" class="btn btn-primary mx-1">Update</button>
                                        <input name="ProgrammerId" type="hidden" value="@manager.ProgrammerId" />
                                        <input name="ProjectId" type="hidden" value="@manager.ProjectId" />
                                    </form>



                                    <form asp-action="GoToDelete" asp-controller="TheManager">
                                        <button type="submit" class="btn btn-danger mx-1">Delete</button>
                                        <input name="ProgrammerId" type="hidden" value="@manager.ProgrammerId" />
                                        <input name="ProjectId" type="hidden" value="@manager.ProjectId" />
                                    </form>
                                }
                                <a asp-controller="TheManager" asp-action="Login" asp-route-Id="@manager.ProgrammerId" class="btn btn-info mx-1">Login</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No programmers added yet</p>
    }
</div>