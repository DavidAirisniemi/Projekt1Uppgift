@model IEnumerable<ProjectManager.Models.Programmer>
@using Microsoft.AspNetCore.Http;



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Programmers</h2>
        </div>
        <div class="col-6 text-right">
            @if (Context.Session.GetInt32("AdminId") != null)
            {
                <a asp-controller="Programmer" asp-action="Create" class="btn btn-primary">Add a programmer</a>
            }

        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Programmer programmer in Model)
                {
                    <tr>
                        <td width="35%">@programmer.FirstName</td>
                        <td width="35%">@programmer.LastName</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                @if (Context.Session.GetInt32("AdminId") != null)
                                {
                                    <a asp-controller="Programmer" asp-action="Update" asp-route-Id="@programmer.Id" class="btn btn-primary mx-1">Update</a>
                                    <a asp-controller="Programmer" asp-action="Delete" asp-route-Id="@programmer.Id" class="btn btn-danger mx-1">Delete</a>
                                }                               
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No programmers added yet</p>
    }
</div>
